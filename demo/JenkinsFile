pipeline {
    agent any

    stages {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'Maven-3.6.1') {
                    sh 'cd demo'
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'Maven-3.6.1') {
                    sh 'cd demo'
                    sh 'mvn test'
                }
            }
        }


        stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'Maven-3.6.1') {
                    sh 'cd demo'
                    sh 'mvn deploy'
                }
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}
